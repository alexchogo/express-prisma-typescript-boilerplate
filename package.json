{
  "name": "express-prisma-typescript-boilerplate",
  "version": "1.0.0",
  "description": "REST API Boilerplate with Node JS, Express, TypeScript and Prisma",
  "main": "src/index.ts",
  "type": "commonjs",
  "repository": "git@github.com:devmahmud/express-prisma-typescript-boilerplate.git",
  "author": "Mahmudul Alam <expelmahmud@gmail.com>",
  "scripts": {
    "start": "node build/src/index.js",
    "pm2-start": "prisma migrate deploy && pm2-runtime start ecosystem.config.json",
    "dev": "nodemon -r tsconfig-paths/register -r ts-node src/index.ts",
    "dev:worker": "nodemon -r tsconfig-paths/register -r ts-node src/shared/workers/worker-runner.ts",
    "dev:cron": "nodemon -r tsconfig-paths/register -r ts-node src/shared/cron/cron-runner.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "coverage:coveralls": "vitest run --coverage --reporter=lcov | coveralls",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check **/*.ts",
    "prettier:fix": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json}\"",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:reset": "prisma migrate reset --force",
    "db:seed": "prisma db seed",
    "docker:prod": "docker compose up --build",
    "docker:dev": "DOCKERFILE=Dockerfile.dev docker compose up --build",
    "prepare": "husky",
    "build": "rimraf build && tsc -p tsconfig.json && tscpaths -p tsconfig.json -s . -o ./build",
    "cz": "cz",
    "release": "semantic-release"
  },
  "keywords": [
    "node",
    "node.js",
    "typescript",
    "boilerplate",
    "express",
    "rest",
    "api",
    "prisma",
    "postgresql",
    "docker",
    "passport",
    "zod",
    "eslint",
    "prettier",
    "swagger",
    "openapi"
  ],
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "19.7.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/format": "^19.8.1",
    "@faker-js/faker": "^9.9.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.3",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.0.10",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.9",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/xss-filters": "^1.2.0",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "commitizen": "^4.3.0",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "husky": "^8.0.3",
    "lint-staged": "^16.1.2",
    "node-mocks-http": "^1.13.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.6.2",
    "prisma": "^6.11.0",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.5",
    "supertest": "^7.1.1",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tscpaths": "^0.0.9",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.3.4",
    "@bull-board/api": "^6.9.2",
    "@bull-board/express": "^6.9.2",
    "@logtail/node": "^0.5.4",
    "@logtail/winston": "^0.5.4",
    "@prisma/client": "^6.11.0",
    "@sentry/node": "^9.11.0",
    "@sentry/profiling-node": "^9.11.0",
    "bcryptjs": "^3.0.2",
    "bullmq": "^5.49.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^17.0.1",
    "express": "^5.1.0",
    "express-basic-auth": "^1.2.1",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "http-status": "^2.1.0",
    "ioredis": "^5.6.1",
    "morgan": "^1.10.0",
    "multer": "^2.0.1",
    "node-cron": "^4.2.0",
    "nodemailer": "^7.0.4",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pm2": "^6.0.5",
    "winston": "^3.10.0",
    "xss-filters": "^1.2.7",
    "zod": "^3.23.8"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
